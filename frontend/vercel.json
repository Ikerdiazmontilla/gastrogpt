{
  "rewrites": [
    {
      "source": "/api/(.*)",               
      "destination": "https://<render-subdomain>.onrender.com/api/$1"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" }
      ]
    }
  ]
}
